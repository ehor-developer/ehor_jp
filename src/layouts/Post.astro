---
import Layout from "../layouts/Layout.astro";
import Container from "../components/Container.astro";
import Section from "../components/Section.astro";
const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title} description="Ehor.についての紹介です。" />
<Container>
    <div class="max-w-2xl mx-auto">
        <div class="my-4 space-y-4">
            <div class="py-4 text-center space-y-2">
                <p class="text-sm">{frontmatter.tag}</p>
                <h1 class="text-4xl font-bold">{frontmatter.title}</h1>
                <p>{frontmatter.year}年</p>
            </div>
            <img
                class="w-lg m-auto my-4"
                src={`/image/works/${frontmatter.image}`} alt={`${frontmatter.title}の紹介画像`} loading="lazy" decoding="async"
            />
        </div>
        <Section title="説明" />
        {frontmatter.description}
        <ul class="list-inside list-disc pl-5">
            {frontmatter.term && <li class="mt-3">制作期間： {frontmatter.term}</li>}
            {frontmatter.role && <li class="mt-3">役割： {frontmatter.role}</li>}
        </ul>
        <div
            class="mt-4 mx-auto text-white prose dark:prose-invert prose-img:rounded-xl"
        >
            <slot />
        </div>
    </div>
</Container>
